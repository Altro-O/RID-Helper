{
  "manifest_version": 3,
  "name": "RID Helper",
  "version": "1.0.2",
  "description": "Помощник для работы с RID и поиска по базе проблем",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": ["problems.json"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "update_url": "https://raw.githubusercontent.com/Altro-O/RID-Helper/main/updates.xml"
} 