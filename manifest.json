{
  "manifest_version": 3,
  "name": "SupportMate",
  "version": "1.0.8",
  "description": "Ваш надёжный помощник в работе службы поддержки. Быстрый поиск по базе проблем, работа с RID и многое другое.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "tabs",
    "notifications",
    "windows"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "problems.json",
      "styles/base.css",
      "styles/components.css",
      "styles/layout.css",
      "styles/settings.css",
      "styles/dialogs.css"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 